---
import Social from './Social.astro';


const platforms = ["Github", "Twitter", "Instagram", "LinkedIn"];
const username = "Saumito";

---

<footer>
    {platforms.map((platform) => (
        <>
            <Social platform={platform} username={username} />
        </>
    ))}

</footer>


<style>
    footer {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
    }
  </style>